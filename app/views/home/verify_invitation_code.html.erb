<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
<title>Milaap-Home</title>
<link rel="icon" href="/images/favicon.ico" type="image/x-icon" />
<%= stylesheet_link_tag "style-alpha.css"%>
<%= stylesheet_link_tag "style.css"%>
<script src="http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE8.js"></script>
<%= javascript_include_tag "jquery-1.3.2.min.js" %><%= javascript_include_tag "jquery-easing-1.3.pack.js" %><%= javascript_include_tag "jquery-easing-compatibility.1.2.pack.js" %><%= javascript_include_tag "jquery-easing-1.3.pack.js" %>
<script type="text/javascript" src="fancybox/jquery.fancybox-1.3.1.js"></script>
<link rel="stylesheet" type="text/css" href="fancybox/jquery.fancybox-1.3.1.css" media="screen" />
<script type="text/javascript">
		$(document).ready(function() {
			$("#signup").fancybox({
				'titlePosition'		: 'inside',
				'transitionIn'		: 'none',
				'transitionOut'		: 'none'
			});

			
			$("#verify").fancybox({
				'titlePosition'		: 'inside',
				'transitionIn'		: 'none',
				'transitionOut'		: 'none'
			});


		});
	</script>



</head>

<body>
<div class="wrapper">
  <!-- Primary nav div -->
  <ul id="primary-nav" class="right">
    <li><a href="/">Home</a></li>
    <li><a href="<%= who_we_are_path %>" title="Who we are" class="<% if  session[:tab] == 'who_we_are'%>active<% else%><% end %>">Who we are</a></li>
    <li><a href="<%= how_it_work_path %>" title="MILAAP - How it works" class="<% if  session[:tab] == 'how_it_work'%>active<% else%><% end %>">How it works</a></li>
    <li><a href="<%= get_envolved_path %>" title="Get involved with MILAAP" class="<% if  session[:tab] == 'get_envolved'%>active<% else%><% end %>">Get involved</a></li>
    <%# if session[:correct_invitation_token] %>
    <% unless current_user.blank? %>
       <li>
      <% if current_user.user_type == "admin" %>
      <a href="/admin/admin">Admin</a>
      <% end%>
    </li>
    <li id="signedin-text"><span> Welcome,
      <%if !current_user.facebook_name.blank? %>
      <%#=  current_user.user_type %> <img src="https://graph.facebook.com/<%= current_user.facebook_uid %>/picture" align="left"/> <%= current_user.facebook_name %>
      <% elsif !current_user.email.blank?%>
      <%= current_user.email[0..15] %>
      <% elsif !current_user.twitter_name.blank?%>
      <%= current_user.twitter_name %>
      <% else %>
      Ananymous
      <% end %>
      |</span><a href="/users/logout">Logout</a> </li>
    <%# else %>
    <!--li id="signup-text"><a id="login"  href="#inline1">Sign in</a></li-->
    <% end %>
    <%# end %>
  </ul>
</div>


<center> 
<br/><br/><br/>
<div class="header clear"><!-- Header div -->
 <div class="wrapper">
  <div id="logo" class="left"><a href="/" title="MILAAP - Beyond Just Credit"><img src="/images/milaap-logo.gif" alt="Milaap"/></a></div>

  <div id="intro-text" class="right">Enabling You &amp; Me to make a sustainable social impact at the bottom of the pyramid</div>
  <div class="clear"></div>
 </div>
</div><!-- /Header div -->

<div id="content"><!-- Content div -->
 <div class="wrapper">  
 <% if notice %>
<div id="notification" style="text-align:left;">
  <p><%= notice.gsub("<br>","<br/>") %></p>
 </div>
<%# notice = nil %>


<% end %>


<% form_tag verify_invitation_code_path do %>
<div id="alpha" style="background:url(images/alpha-bg.png) no-repeat 0 30px; width:970px; height:362px;">
    <div class="alpha-content">
   <p>We have sent you an invite code via email. <br/>Please enter the code to get started.</p>
   <br/><br/>
   <input type="text" class="left" id="enter-invite" onblur="if(this.value == ''){this.value = 'Enter your invite code here';}" onfocus="if(this.value =='Enter your invite code here'){this.value = '';}" onclick="if(this.value =='Enter your invite code here'){this.value = '';}" maxlength="256" value="Enter your invite code here" name="invitation" style="height:33px;"/>
   <input type="submit" value="" style="margin:-4px 0 0 -20px;float:left; background:url(images/enter-site-btn.png) no-repeat 0 0px; border:0px; width:167px; height:43px;"/>
   <p class="clear"></p>  
   <% unless user_signed_in? %> 
     <p id="returning-user"><a id="verify"  href="#inline11">Returning user? Click here to access the site</a></p>
   <% end %>  
   </div>
  </div>
<% end %>

</div>





</div><!-- /Content div -->
<div id="footer"><!-- Footer div -->
 <div class="wrapper">
  <div class="copyright" style="text-align:center">
   <p>&copy; 2010. Milaap.org. All rights reserved.</p>
  </div>
  <div class="clear"></div>
 </div>

</div><!-- /Footer div -->
</center> 
 <div style="display: none;"> <!-- Login blurb-->


 <div id="inline11" style="width:500px;height:320px;overflow:hidden;">
  <form method="post" id="user_new" class="user_new" action="/users/login" accept-charset="UTF-8"> 
  <div id="signup-new">
   <img src="/images/signin_head_img.jpg" alt=""/>
   <div class="signup-left-panel">
    <h4>Sign in with your email</h4>
    <label>Email id</label>
   <input type="text" value=""   id="user_email" name="user[email]" style='border:1px solid #DBD9D8;color:#2F0000;display:block;font-family:"Arial",Helvetica,sans-serif;
font-size:12px;
height:30px;
margin:0px 0;
padding:10px 0 0 10px;
width:200px;
padding:5px;
'>
    <label>Password</label>
        <input type="password" name="user[password]"   id="user[password]"  style='border:1px solid #DBD9D8;color:#2F0000;display:block;font-family:"Arial",Helvetica,sans-serif;
font-size:12px;
height:30px;
margin:0px 0;
padding:10px 0 0 10px;
width:200px;padding:5px;'>
   </div>
   <div class="signup-right-panel">
    <h4>Sign in with another account</h4>
    <%= render :partial=>"/layouts/twitter_google_facebook"%> </div>
   </div>
   <div class="clear"></div> 
   
   <div class="clear"></div>
    <input type="submit" class="modified_submit_signin" value="" style="cursor:pointer"/>
  </div>
</form>
 </div>

</div>


</body>
</html>
