<script type="text/javascript">
  $(document).ready(function() {
  $(".signup").fancybox({
    'titlePosition'  : 'inside',
    'transitionIn'  : 'none',
    'transitionOut'  : 'none'
   });

   
   $("#login").fancybox({
    'titlePosition'  : 'inside',
    'transitionIn'  : 'none',
    'transitionOut'  : 'none'
   });
   
  $('.signup').click(function() {
     $('.slider-btns').hide();
   });

   $('#fancybox-close').click(function() {
     $('.slider-btns').show();
   });
  });
 </script>
</head>
<body>
<div class="wrapper">
  <!-- Primary nav div -->
  <ul id="primary-nav" class="right">
    <li><a href="/" title="MILAAP - Beyond Just Credit" class="<% if  session[:tab] == 'home'%>active<% else%><% end %>">Home</a></li>
    <li><a href="<%= who_we_are_path %>" title="Who we are" class="<% if  session[:tab] == 'who_we_are'%>active<% else%><% end %>">Who we are</a></li>
    <li><a href="<%= how_it_work_path %>" title="MILAAP - How it works" class="<% if  session[:tab] == 'how_it_work'%>active<% else%><% end %>">How it works</a></li>
    <li><a href="<%= get_envolved_path %>" title="Get involved with MILAAP" class="<% if  session[:tab] == 'get_envolved'%>active<% else%><% end %>">Get involved</a></li>
    <%# if session[:correct_invitation_token] %>
    <% unless current_user.blank? %>
     <li> <% if current_user.user_type == "admin" %><a href="/admin/admin">Admin</a><% end%></li>


    <li id="signedin-text"><span> Welcome,
      <%if !current_user.facebook_name.blank? %>
      <%#=  current_user.user_type %>  
      <img src="https://graph.facebook.com/<%= current_user.facebook_uid %>/picture" align="left"/> <%= current_user.facebook_name %>
      <% elsif !current_user.email.blank?%>
      <%= current_user.email[0..15] %>
      <% elsif !current_user.twitter_name.blank?%>
      <%= current_user.twitter_name %>
      <% else %>
      Ananymous
      <% end %>
      |</span><a href="/users/logout">Logout</a>
      
     

    </li>
    <%# else %>
    <!--li id="signup-text"><a id="login"  href="#inline1">Sign in</a></li-->
    <% end %>
    <%# end %>
  </ul>
</div>
<!-- /Primary nav div -->
<div class="header clear">
  <!-- Header div -->
  <div class="wrapper">
    <div id="logo" class="left"><a href="/" title="MILAAP - Beyond Just Credit"><img src="/images/milaap-logo.gif" alt="Milaap"/></a></div>
    <div id="intro-text" class="right">Enabling You &amp; Me to make a sustainable social impact at the bottom of the pyramid</div>
    <div class="clear"></div>
  </div>
</div>
<!-- /Header div -->
<div id="content">
  <!-- Content div -->
  <div class="wrapper"> <%= yield %> </div>
</div>
<!-- /Content div -->
<div id="footer">
  <!-- Footer div -->
  <div class="wrapper">
    <ul class="left">
      <li><a href="<%= privacy_path %>" title="Privacy Policy">Privacy Policy</a></li>
      |
      <li><a href="#">SiteMap</a></li>
      |
      <li><a href="<%= advisory_board_path %>" title="Advisors">Advisors</a></li>
      |
      <li><a href="#">Partners</a></li>
      |
      <li> 
      <a href="http://blog.milaap.org/" title="MILAAP - Beyond Just Credit">Blog |
      <li><a href="<%= contact_us_path %>" title="Contact Milaap">Contact Us</li>
      </a>
    </ul>
    <div class="copyright right">
      <p>&copy; 2010. Milaap.org. All rights reserved.</p>
    </div>
    <div class="clear"></div>
  </div>
</div>
<!-- /Footer div -->


<script type="text/javascript">
 
  var theInt = null;
  var $crosslink, $navthumb;
  var curclicked = 0;
  
  theInterval = function(cur){
   clearInterval(theInt);
   
   if( typeof cur != 'undefined' )
    curclicked = cur;
   
   $crosslink.removeClass("active-thumb");
   $navthumb.eq(curclicked).parent().addClass("active-thumb");
    $(".stripNav ul li a").eq(curclicked).trigger('click');
   
   theInt = setInterval(function(){
    $crosslink.removeClass("active-thumb");
    $navthumb.eq(curclicked).parent().addClass("active-thumb");
    $(".stripNav ul li a").eq(curclicked).trigger('click');
    curclicked++;
    if( 6 == curclicked )
     curclicked = 0;
    
   }, 3000);
  };
  
  $(function(){
   
   $("#main-photo-slider").codaSlider();
   
   $navthumb = $(".nav-thumb");
   $crosslink = $(".cross-link");
   
   $navthumb
   .click(function() {
    var $this = $(this);
    theInterval($this.parent().attr('href').slice(1) - 1);
    return false;
   });
   
   theInterval();
  });
 </script>


